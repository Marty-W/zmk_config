#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/outputs.h>

/ {
    combos {
        compatible = "zmk,combos";

        raycast {
            bindings = <&kp LG(SPACE)>;
            key-positions = <37 40>;
        };

        vimesc {
            bindings = <&kp ESCAPE>;
            key-positions = <19 20>;
        };
    };

    macros {
        leader_1: leader_1 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp SPACE &kp NUMBER_1>;
            label = "LEADER_1";
        };

        leader_2: leader_2 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp SPACE &kp NUMBER_2>;
            label = "LEADER_2";
        };

        leader_3: leader_3 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp SPACE &kp NUMBER_3>;
            label = "LEADER_3";
        };

        leader_4: leader_4 {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&kp SPACE &kp NUMBER_4>;
            label = "LEADER_4";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
&kp ESC       &kp Q  &kp W  &kp E             &kp R           &kp T              &kp Y        &kp U      &kp I                     &kp O    &kp P          &kp MINUS
&kp TAB       &kp A  &kp S  &kp D             &kp F           &kp G              &kp H        &kp J      &kp K                     &kp L    &kp SEMICOLON  &kp SINGLE_QUOTE
&kp LEFT_ALT  &kp Z  &kp X  &kp C             &kp V           &kp B              &kp N        &kp M      &kp COMMA                 &kp DOT  &kp FSLH       &kp LEFT_COMMAND
                            &kp LEFT_CONTROL  &kp LEFT_SHIFT  &lt 2 BACKSPACE    &lt 1 ENTER  &kp SPACE  &kp LS(LA(LC(LEFT_GUI)))
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| 1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&kp N1  &kp N2  &kp N3  &kp AT        &kp LEFT_BRACE        &kp RIGHT_BRACE          &kp EXCLAMATION  &kp COLON  &kp MINUS     &kp PLUS   &kp PERCENT  &trans
&kp N4  &kp N5  &kp N6  &kp POUND     &kp LEFT_PARENTHESIS  &kp RIGHT_PARENTHESIS    &kp AMPERSAND    &kp EQUAL  &kp GT        &kp UNDER  &kp TILDE    &trans
&kp N7  &kp N8  &kp N9  &kp DOLLAR    &kp LEFT_BRACKET      &kp RIGHT_BRACKET        &kp PIPE         &kp GRAVE  &kp ASTERISK  &kp SLASH  &kp CARET    &trans
                        &kp NUMBER_0  &trans                &trans                   &trans           &trans     &trans
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
&kp F1  &kp F2   &kp F3   &kp F4   &kp C_VOLUME_DOWN  &kp C_VOLUME_UP    &leader_1         &leader_2   &leader_3   &leader_4  &bt BT_CLR    &bt BT_NXT
&kp F5  &kp F6   &kp F7   &kp F8   &kp HOME           &kp END            &kp LEFT          &kp DOWN    &kp UP      &kp RIGHT  &out OUT_BLE  &out OUT_USB
&kp F9  &kp F10  &kp F11  &kp F12  &kp PAGE_DOWN      &kp PAGE_UP        &kp C_PLAY_PAUSE  &kp C_PREV  &kp C_NEXT  &none      &none         &none
                          &none    &none              &none              &none             &none       &none
            >;
        };
    };
};
